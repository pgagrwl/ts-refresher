{
  "compilerOptions": {
    "lib": ["DOM","ES6"],
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution":"node",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["data/components/*"],
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true
  }
}